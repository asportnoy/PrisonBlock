{
	"manifest_version": 2,
	"name": "BadBusiness",
	"version": "2.0",
	"description": "Abolish the prison-industrial complex",
	"icons": {
		"16": "icons/logo16.png",
		"48": "icons/logo48.png",
		"128": "icons/logo128.png"
	},
	"background":
	{
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"js": ["wordReplace.js"],
			"run_at": "document_end"
		}
	],
	"permissions":
	[
		"webRequest",
		"webRequestBlocking",
		"*://tide.com/*",
		"*://bountytowels.com/*",
		"background"
	]
}
